<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.spring.menu.model.dao.MenuDao">
	<select id="selectAllMenu" resultType="menu">
		select 
			*
		from
			menu
		order by
			id desc
	</select>
	
	<select id="selectMenuByTypeAndTaste" resultType="menuMap">
		select
			*
		from
			menu
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<choose>
				<when test="type = 'kr'">
					type = #{type}
				</when>
				<when test="type = 'jp'">
					and type = #{type}
				</when>
				<when test="type = 'ch'">
					and type = #{type}
				</when>
				<when test="type = 'all'">
					
				</when>
			</choose>
		</trim>
	</select>
	
	<resultMap type="menu" id="menuMap">
		<id column="id" property="id"/>
		<result column="restaurant" property="restaurant"/>
		<result column="name" property="name"/>
		<result column="price" property="price"/>
		<result column="type" property="type"/>
		<result column="taste" property="taste"/>
	</resultMap>
</mapper>






